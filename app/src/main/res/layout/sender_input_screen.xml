<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:background="@drawable/custom_toolbar"
        android:backgroundTint="@color/red"
        android:contentInsetStart="0dp"
        android:contentInsetEnd="0dp"
        app:title="SENDER DETAILS"
        android:textAlignment="center"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:titleTextColor="@color/white" />

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/padding"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.0" >

        <EditText
            android:id="@+id/editTextEmail"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:textColor="@color/darkgrey"
            android:layout_height="wrap_content"
            android:textColorHint="@color/darkgrey"

            android:layout_marginBottom="@dimen/etmargin"
            android:hint="@string/stremail"
            android:padding="@dimen/etpadding"
            android:backgroundTint="@color/white"
            android:background="@drawable/custom_edit_text" />

        <EditText
            android:id="@+id/editTextName"

            android:inputType="text"
            android:textColorHint="@color/darkgrey"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkgrey"

            android:layout_marginBottom="@dimen/etmargin"
            android:hint="@string/strfull_name"
            android:padding="@dimen/etpadding"
            android:backgroundTint="@color/white"
            android:background="@drawable/custom_edit_text" />

        <EditText
            android:id="@+id/editTextPhone"
            android:textColor="@color/darkgrey"

            android:inputType="phone"
            android:textColorHint="@color/darkgrey"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/etmargin"
            android:hint="@string/strcontact_information"

            android:padding="@dimen/etpadding"
            android:backgroundTint="@color/white"
            android:background="@drawable/custom_edit_text" />

        <EditText
            android:id="@+id/editTextCountry"
            android:textColorHint="@color/darkgrey"
            android:textColor="@color/darkgrey"


            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/etmargin"
            android:hint="@string/strcountry"
            android:padding="@dimen/etpadding"
            android:backgroundTint="@color/white"
            android:background="@drawable/custom_edit_text" />

        <EditText
            android:id="@+id/editTextAddress"
            android:inputType="text"
            android:textColor="@color/darkgrey"

            android:layout_width="match_parent"
            android:textColorHint="@color/darkgrey"

            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/etmargin"
            android:hint="@string/straddress"
            android:padding="@dimen/etpadding"
            android:backgroundTint="@color/white"
            android:background="@drawable/custom_edit_text" />

        <!-- Button -->
        <Button
            android:id="@+id/buttonNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/etmargin"
            android:paddingHorizontal="70dp"
            android:text="Next"
            android:textColor="@color/white"
            android:backgroundTint="@color/red" />
    </LinearLayout>
</LinearLayout>
